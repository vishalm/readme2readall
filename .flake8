[flake8]
max-line-length = 88
extend-ignore = 
    E501,
    W503,
    W293,
    W291,
    F401,
    F541,
    E722
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811,F841
    setup.py:F401 